<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/registerLayout">

    <!-- 타이틀바 -->
    <LinearLayout
        android:id="@+id/registerTop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="새 연락처"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@drawable/round_top_bg"
            android:layout_width="match_parent"
            android:layout_height="53dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/inputTag_name"
            android:textSize="10sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"/>
        <EditText
            android:id="@+id/newName"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/inputTag_phoneNumber"
            android:textSize="10sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전화번호"/>
        <EditText
            android:id="@+id/newPhoneNumber"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/inputTag_email"
            android:textSize="10sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일"/>
        <EditText
            android:id="@+id/newEmail"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/inputTag_group"
            android:textSize="10sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹"/>
        <EditText
            android:id="@+id/group"
            android:textSize="15sp"
            android:textColor="#000"
            android:alpha="0.87"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/registerButton"
            android:text="확인"
            android:textSize="15sp"
            android:textColor="#A901DB"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="53dp"/>
        <Button
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#A901DB"
            android:padding="16dp"
            android:gravity="center"
            android:background="#00000000"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="53dp"
            android:onClick="mOnCancle"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>
